
    <div class="col-xs-12">
      <div id="myCarousel" class="carousel slide border col-xs-12" data-ride="carousel">
        <!-- Wrapper for slides -->
        <div class="carousel-inner" style="height: 180px;">
          <div class="item active " style="height:100%;width:100%;">
            <h5 class="text-center typewriter" style="margin-top:30px;">歡迎來到Go Fan的Go Station，<br/>你的充電站還有"<strong><mark><%= @unchallenge_trips%>顆</mark></strong>"未充飽的電池，<br/>現在就選擇一顆電池為他充電吧!</h5>
          </div>
          <div class="item">
            <%= image_tag ("101.jpg"),style:"height:180px;width:100%;border-radius:10px;"%>
          </div>
          <div class="item">
            <%= image_tag ("cks.jpg"),style:"height:180px;width:100%;border-radius:10px;"%>
          </div>
        </div>

        <!-- Left and right controls -->
        <a class="left carousel-control" href="#myCarousel" data-slide="prev">
          <span class="glyphicon glyphicon-chevron-left"></span>
          <span class="sr-only">Previous</span>
        </a>
        <a class="right carousel-control" href="#myCarousel" data-slide="next">
          <span class="glyphicon glyphicon-chevron-right"></span>
          <span class="sr-only">Next</span>
        </a>
      </div>
      <div class="badges-container border clearfix col-xs-12" >
        <% @trips.each do |t| %>
          <div class="col-xs-6 col-sm-3 col-md-2">
            <div class="">
              <% if t.is_challenged?(current_user)%>
                <%= image_tag t.image,class: "bettery-green" %>
              <%else%>
                <%= image_tag t.image,class: "bettery-red" %>
              <%end%>
            </div>
            <div class="text-center">
              <%= link_to "#{t.name}", trip_path(t)%>
            </div>
          </div>
  
      <!--
              <% @followings.each do |following| %>
                <% if t.is_challenged?(following) %>
                  <%= following.email%> 已完成挑戰
                <% end %>
              <% end %>
          -->
        <%end%>
      </div> 
    </div>



