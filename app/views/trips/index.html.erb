
    <div class="col-xs-12 background" >
      <div class="border col-xs-12 white">
        <div id="myCarousel" class="carousel slide"  data-ride="carousel">
          <!-- Wrapper for slides -->
          <div class="carousel-inner" style="height: 120px; border-radius: 10px;">
            <div class="item active " style="height:100%;width:100%;">
              <h5 class="text-center" style="line-height: 1.5em;color:#4A90E2;">歡迎來到 <%= current_user.name %> Go Station，<br/>你的充電站還有<strong style="color:red;"><%= @unchallenge_trips%>顆</strong>"未充飽的電池，<br/>現在就選擇一顆電池為他充電吧!</h5>
            </div>

            <div class="item">
              trip name
            </div>
            <div class="item">
              <h5> trip name </h5>
              <p> trip content </p>
             </div>
           </div>

           <!-- Left and right controls -->
          <a class="left carousel-control" href="#myCarousel" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left"></span>
            <span class="sr-only">Previous</span>
          </a>
          <a class="right carousel-control" href="#myCarousel" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right"></span>
            <span class="sr-only">Next</span>
          </a>
        </div>
        <hr>
        <div class= "badges col-xs-12">
          <% badge_id = 1 %>
          <% @trips.each do |t| %>
            <div class="col-xs-6 col-sm-3 col-md-2 ">  
              <div class="">
                <%= link_to trip_path(t) do %>
                  <% if t.is_challenged?(current_user)%>                  
                    <%= image_tag Merit::Badge.find(badge_id).custom_fields[:image],alt: t.name, class: "bettery-green" %>
                  <% else %>
                    <%= image_tag Merit::Badge.find(badge_id).custom_fields[:image],alt: t.name, class: "bettery-red" %>
                  <% end %>
                <% end %>
              </div>

              <div class="text-center">
                <%= link_to "#{t.name}", trip_path(t)%>
              </div>     
            </div>
            <% badge_id = badge_id + 1 %>
          <%end%>          
        </div>        
      </div> 
    </div>

