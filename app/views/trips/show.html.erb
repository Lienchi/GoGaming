        function getUserCurrentPosition(){
          var promise = new Promise(function(resolve, reject) {
            if (navigator.geolocation) {
              navigator.geolocation.getCurrentPosition(
                function(position){
                  resolve(position)
                }
              );
            } else {
              reject("Can not get current position!");
            }
          });

          return promise;
        }

