      </div>
    <% end -%>
  -->
        <div class="col-xs-12 clearfix bottom" style=" padding: 15px 20px;" >
          <div class="actions text-center ">
            <input class="btn btn-main-1 float-left" type="submit" value="出發" style="margin-right: 20px; padding-left: 25px;
  padding-right: 25px;">
            <%= render "devise/shared/links" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</body>


