<body class="login_page" style="background-image: url('<%= asset_path("login_page.svg") %>'); background-repeat: repeat-x; background-position: top center; background-color: #FFFFFF; background-attachment: fixed; ">

  <div class="container">
    <br>
    <div class="col-xs-12 col-sm-8 col-sm-offset-2 ", style="min-height: 605px;">
      
        <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, :class => 'form-horizontal text-center'}) do |f| %>
          <%= devise_error_messages! %>
          <div class="  " style="padding:20px;">
            <h3 class="text-center">忘記密碼?</h3>
            <br/>
            <br/>
            <br/>
            <div class="field form-group">
              
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "float-left form-control  border rounded" , placeholder:"email" %>
            </div>
          </div>
          <div class="clearfix"></div>
          
          <div class="col-xs-12 clearfix bottom " style="min-height: 465px;" >
            <div class="actions text-center station-buttom">
              <input class="btn btn-main-1 btn-lg float-left" type="submit" value="寄信重設密碼" ">

            </div>
        </div>
        <% end %>
    </div>
  </div>
</body>