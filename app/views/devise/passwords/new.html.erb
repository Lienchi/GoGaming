
  <div class="col-xs-12 col-sm-8 col-sm-offset-2 col-md-6 col-md-offset-3 background" style="padding-bottom: 10px;">
    
      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, :class => 'form-horizontal text-center'}) do |f| %>
        <%= devise_error_messages! %>
        <div class="border white " style="padding:20px;">
          <h2 class="text-center">忘記密碼?</h2>
          <br/>
          <div class="field form-group">
            <%= f.label :email, class: "col-xs-4 control-label" %>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "float-left"%>
          </div>
        </div>
        <div class="col-xs-12 border clearfix bottom white" style="min-height: 465px;" >
          <div class="actions text-center station-buttom">
            <input class="btn btn-success" type="submit" value="寄信重設密碼" style="margin-right: 20px;">
            <%= render "devise/shared/links" %>
          </div>
      </div>
      <% end %>
   </div>
