<div class="container background">
  <div class="col-xs-12 border station box-shadow-right">
    <h2 class="text-center">註冊</h2>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), :html =>{:class => 'form-horizontal text-center'}) do |f| %>
        <%= devise_error_messages! %>
        <div class="border monitor monitor-inner-shadow">
          <div class="field form-group">
            <%= f.label :name, class: "col-xs-4 control-label"%>
            <%= f.text_field :name, class: "float-left"%>
          </div>

          <div class="field form-group">
            <%= f.label :email, class: "col-xs-4 control-label" %>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "float-left" %>
          </div>

          <div class="field form-group">
            <%= f.label :password, class: "col-xs-4 control-label" %>
              <% if @minimum_password_length %>
                <em>(<%= @minimum_password_length %> characters minimum)</em>
              <% end %>
            <%= f.password_field :password, autocomplete: "off" , class: "float-left"%>
          </div>

          <div class="field form-group">
            <%= f.label :password_confirmation, class: "col-xs-4 control-label" %>
            <%= f.password_field :password_confirmation, autocomplete: "off", class: "float-left"%>
          </div>
        </div>
        <hr/>
        <div class="actions station-buttom">
          <input class="btn btn-success" type="submit" value="註冊" style="margin-right: 20px;">
          <%= render "devise/shared/links" %>
        </div>
      <% end %>
  </div>
</div>
