<div id="main" class="m-scene user-background">
  <div class="scene_element scene_element--fadeinright">

    <ul class="nav nav-tabs">
      <li role="presentation"  class="active" >
        <%= link_to '我的朋友', f_leaderboards_users_path %>
      </li>
      <li role="presentation">
        <%= link_to '所有玩家', leaderboards_users_path %>
      </li>
    </ul>



    <div class="col-md-12">

      <table class="table table-striped table-bordered">
        <thead>
          <tr>
            <th>Followings</th>
            <th>Name</th>
            <th>score</th>
          </tr>
        </thead>
        <tbody>
          <% i=1 %>
          <% @friends_scores.each do |score| %>
          <tr>
            <th scope="row"><%=  i %> <% i+=1 %></th>
            <td><%= User.find(score[:user_id]).email %></td>
            <td><%= score[:sum_points] %></td>
          </tr>
          <% end %>
        </tbody>
      </table>


      <%= link_to "My Profile", user_path(current_user)%>
    </div>
  </div>
</div>
