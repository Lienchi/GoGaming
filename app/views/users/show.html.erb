<h2><%= @user.email %></h2>

<h3> user's badges </h3>



<ul>
  <% @user.badges.each do |badge| %>
    <li><%= badge.name %></li>
    <li><%= badge.id %></li>
    <li><%= image_tag badge.custom_fields[:img_url], :style => "width: 50px" %></li>
  <% end %>
</ul>

<h3> user's points </h3>
<p><%= @user.points %></p>
<h3> user's level </h3>
<p><%= @user.level %></p>



