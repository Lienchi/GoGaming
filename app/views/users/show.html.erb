
<div class="media  col-xs-12 col-sm-12 col-md-12 background">
  <div class="border clearfix  col-sm-6 col-md-6 white" >
    <div class="media-left media-middle col-xs-5 col-sm-6 col-md-4 clearfix">
      <div class="text-center">
        <%= image_tag @user.avatar, class: "media-object img-circle avatar "%>
         <%= render partial: "shared/follow", locals: {user: @user}%>
      </div>
      <div class="uploader text-center">
        <% if @user == current_user %>
          <%= form_for @user do |f| %>
            <%= f.file_field :avatar, style: " width:90px;" ,class: "border"%>
            <input class="btn btn-success btn-sm " type="submit" value="更新照片">
            <br/>
          <%end%>
        <%end%>
      </div>
    </div>
    <div class="media-body ">
      <div class="col-xs-12 col-sm-12 col-md-12 ">
        <div class="media col-xs-12 col-sm-12 col-md-12 ">
          <div class="media-body media-middle">
            <h4 class="media-heading text-center"><%= @user.name%></h4>
          </div>
        </div>
        <div class="media col-xs-12 col-sm-12 col-md-12 ">
          <div class="media-left media-middle">
            <%= image_tag(("navbar_icons/G.png"), class: "media-object",style: "width:32px;")%>
          </div>
          <div class="media-body media-bottom">
            <h4 class="media-heading text-center">點數 <%= @user.points %></h4>
          </div>
        </div>
        <div class="media col-xs-12 col-sm-12 col-md-12 ">
          <div class="media-left media-middle">
            <%= image_tag(("navbar_icons/B.png"), class: "media-object",style: "width:30px;")%>
          </div>
          <div class="media-body media-bottom">
            <h4 class="media-heading text-center">徽章 <%= @user.badges.count%></h4>
          </div>
        </div>
        <div class="media col-xs-12 col-sm-12 col-md-12 ">
          <div class="media-left media-middle">
            <%= image_tag(("navbar_icons/Lv.png"), class: "media-object",style: "width:30px;")%>
          </div>
          <div class="media-body media-bottom">
            <h4 class="media-heading text-center">等級 <%= @user.level %></h4>
          </div>
        </div>
        <div class="media col-xs-12 col-sm-12 col-md-12 ">
          <div class="media-body media-middle">
            <div class="media-heading">
              <%= link_to "排行榜", users_path, class: "btn btn-danger"%>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="border clearfix border col-sm-6 col-md-6 white" style="min-height:430px;"  >
    <div class="user-badges clearfix">
      <% @user.badges.each do |badge| %>
        <div class="user-badge thumbnail card col-xs-4 col-sm-4 col-md-3">
          <%= image_tag (badge.custom_fields[:image]) %>
          <div class="caption text-center">
            <p><%= badge.name %></p>
          </div>
        </div>
      <%end%>
    </div>
  </div>
</div>








