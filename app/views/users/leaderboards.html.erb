<div class="container">
  <div class="border white table-responsive col-xs-12 col-sm-8 col-sm-offset-2 col-md-6 col-md-offset-3" style="min-height: 605px;">

    <ul class="nav nav-tabs pull-right">
      <li role="presentation"  class="active" >
        <%= link_to '所有玩家', leaderboards_users_path %>
      </li>
      <li role="presentation">
        <%= link_to '我的朋友', f_leaderboards_users_path %>
      </li>
      <li>
        <%= link_to "我的記錄", user_path(current_user)%>
      </li>
    </ul>
    <table class="table">
     <thead>
        <tr>
          <th class="col-xs-1 text-center"> </th>
          <th class="col-xs-3"> </th>
          <th class="col-xs-4 text-center"> </th>
          
          <th class="col-xs-2">
              <%= image_tag("navbar_icons/B.svg",style: "width:25px;height:25px; margin:0 auto;")%>
          </th>
          <th class="col-xs-2">
              <%= image_tag("navbar_icons/b_G.svg",style: "width:25px;height:25px; margin:0 auto;")%>
          </th>
        </tr>
      </thead>  
      <tbody>
        <% i=1 %>
        <% @scores.each do |score| %>
          <tr>
            <th class="col-xs-1 text-center media-middle" scope="row" style="padding-top:5%;"><%=  i %><% i+=1 %></th>
           <td class="col-xs-3"><%= image_tag "#{User.find(score['user_id']).avatar}", class: "img-responsive"%></td>
            <td class="col-xs-4 text-center" style="padding-top:5%;"><%= link_to "#{User.find(score['user_id']).name}", user_path(User.find(score['user_id']))%><%= render partial: "shared/follow", locals: {user: User.find(score['user_id']) }%></td>
              <td class="col-xs-2 text-center" style="padding-top:5%;"><%= User.find(score['user_id']).badges.count %></td>
            <td class="col-xs-2 text-center" style="padding-top:5%;"><%= score['sum_points'] %></td>
          </tr>
        <%end%>
      </tbody>
    </table>
  </div>
</div>
