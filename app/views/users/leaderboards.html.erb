<div class="container">

  <h1>LeaderBoard</h1>

  <div class="row">

    <div class="col-md-12">

      <div>
        <%= link_to 'User Profile', user_path(current_user, class: "btn btn-primary") %>
      </div>

      <br>

      <table class="table table-striped table-bordered">
        <thead>
          <tr>
            <th>#</th>
            <th>Name</th>
            <th>score</th>
          </tr>
        </thead>
        <tbody>
          <% @scores.each do |score| %>
          <tr>
            <th scope="row"><%=  %></th>
            <td><%= User.find(score['user_id']).email %></td>
            <td><%= score['sum_points'] %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
