<!DOCTYPE html>
<html>
  <head>
    <title>GoGaming</title>
    <%= csrf_meta_tags %>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <%= Gon::Base.render_data %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <!-- 導覽列 -->
    <nav class="navbar navbar-default nav-style">
      <div class="container-fluid ">
        <!-- Brand and toggle get grouped for better mobile display -->
        <div class="navbar-header ">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>



      

          <div class="nav-icon brand">
            <% if controller?("devise/sessions")||controller?("devise/passwords")||controller?("users/registrations")%>
              <%= image_tag "gogoro.png", style:"width:100px;"%>
            <%end%>
          </div>
          <% if current_user %>
            <div class="nav-icon brand">
              <% if controller?("gostations")%>
                <h4>規劃路線</h4>
              <% elsif controller?("trips") && action?("index")%>
                <h4>我的挑戰</h4>
              <% elsif controller?("trips") && action?("show")%>
                <h4>
                  <%= @trip.name%>
                  <!-- <button class="btn " data-toggle="modal" data-target="#myModal" style="background-color: #FFFFFF;padding:0px 0px;font-size:18px;"><strong><%= @trip.name%></strong></button> -->
                </h4>
              <% elsif controller?("users") %>
                <h4>我的紀錄</h4>
              <% else %>
                <%= image_tag "gogoro.png", style:"width:100px;"%>
              <%end%>
            </div>
            <div class="nav-icon">
              <%= link_to root_path do %>
                <% if controller?("gostations")%>
                  <%= image_tag "navbar_icons/map.svg", :class => "nav-icon-style" %>
                <% else %>
                  <%= image_tag "navbar_icons/g_map.svg", :class => "nav-icon-style" %>
                <% end %>
              <% end %>
            </div>
            <div class="nav-icon">
              <%= link_to trips_path do %>
                <% if controller?("trips")%>
                  <%= image_tag "navbar_icons/gogoro.svg", :class => "nav-icon-style" %>
                  <% else %>
                  <%= image_tag "navbar_icons/g_gogoro.svg", :class => "nav-icon-style" %>
                <% end %>
              <% end %>
            </div>

            <div class="nav-icon pull-right nav-number">
              <%= current_user.points%>
            </div>

            <div class="nav-icon pull-right">
              <%= link_to user_path(current_user) do %>
                <% if controller?("users")%>
                  
                  <div class=" ">
                    <%= image_tag "navbar_icons/G.svg", :class => "nav-icon-style"%>
                  </div>
                <% else %>
                  
                  <div class="nav-icon ">
                    <%= image_tag "navbar_icons/g_G.svg", :class => "nav-icon-style "%>
                  </div>
                <% end %>
              <% end %>
            </div>



          <%end%>
        </div>
        <!-- Collect the nav links, forms, and other content for toggling -->
        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
          <ul class="pull-right text-right nav navbar-nav">
            <% if current_user %>
              <% if current_user.role == "admin" %>
                <li><%= link_to "後台", admin_trips_path%><li>
              <%end%>
            <li><%= link_to('登出', destroy_user_session_path, method: :delete) %></li>
            <li><%= link_to('修改密碼', edit_user_registration_path) %></li>
            <% end %>
          </ul>
        </div>
      </div>
    </nav>
    <!-- Alert-->
    <% if flash[:notice] %>
      <div class="container">
        <div class="row">
          <div class="alert alert-success alert-dismissible" role="alert">
            <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            <%= notice %>
          </div>
        </div>
      </div>
    <% end %>
    <% if flash[:alert] %>
      <div class="container">
        <div class="row">
          <div class="alert alert-danger alert-dismissible" role="alert">
            <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            <%= alert %>
          </div>
        </div>
      </div>
    <% end %> 
    <%= yield %>
  </body>
</html>
