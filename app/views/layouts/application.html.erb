<!DOCTYPE html>
<html>
  <head>
    <title>GoGaming</title>
    <%= csrf_meta_tags %>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <%= Gon::Base.render_data %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <style type="text/css">
      .introjs-helperNumberLayer{
        font-size: 0px;
      }
    </style>
  </head>

  <body>
    <!-- 導覽列 -->
    <% if current_user %>
      <nav class="navbar" style="margin-bottom: 0px;">
        <nav class="navbar navbar-default navbar-fixed-top" style="background-color: #FFFFFF; ">
          <div class="container-fluid " style=" padding-bottom: 1.5px;"">
            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header ">
              <!-- <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
              </button> -->

              <div class="nav-icon brand">
                  <%= image_tag "navbar_icons/gogoro.svg", style:"width:100px;" %>
              </div>

            </div>

            <div class="navbar-nav" style="">
              <div class="nav-btn"  style=" float: left;  ">
                <% if current_user %>
                  <% if current_user.role == "admin" %>
                    <%= link_to "後台", admin_trips_path, class: ""  %>
                  <% end %>
                <% end %>
              </div>
            </div>


            <div class="navbar-nav">
              <div class=" pull-right nav-btn" style=" float: right; ">
                <% if current_user %>
                  <%= link_to('登出', destroy_user_session_path, method: :delete, class: ""  ) %>
                <% end %>
              </div>
            </div>

            <!-- Collect the nav links, forms, and other content for toggling -->
            <!-- <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1"> -->
            <!-- <ul class="pull-right text-right nav" style=" float: right; display: inline-block;">
              <% if current_user %>
                <% if current_user.role == "admin" %>
                  <li><%= link_to "後台", admin_trips_path%><li>
                <% end %>
              <% end %>

              <% if current_user %>
              <li><%= link_to('登出', destroy_user_session_path, method: :delete) %></li>
              <% end %>
            </ul> -->
            <!-- </div> -->
          </div>
        </nav>
      </nav>
    <% end %>
        <div class="clearfix"></div>
<!-- nav-tab -->

      <!-- <nav class="navbar-fixed-top" style="background-color: #FFFFFF; border: none; margin-top: 48px;"> -->
        <nav class="navbar-fixed-bottom" style="background-color: #53C0F0; border: none; ">
        <% if current_user %>
          <div class="" >

            <%= link_to root_path do %>
              <% if controller?("gostations")%>
                <div class="col-xs-3 my-nav-tab white-bg" >
                  <%= image_tag "navbar_icons/find.svg", :class => "nav-icon-style" %>
                  <h6 class="blue-text">找電池</h6>
                </div>
              <% else %>
                <div class="col-xs-3 my-nav-tab" >
                  <%= image_tag "navbar_icons/g_find.svg", :class => "nav-icon-style" %>
                  <h6 class="white-text">找電池</h6>
                </div>
              <% end %>             
            <% end %>
            

            
            <%= link_to trips_path do %>
              <% if controller?("trips")%>
                <div class="col-xs-3 my-nav-tab white-bg" >
                  <%= image_tag "navbar_icons/play.svg", :class => "nav-icon-style" %>
                  <h6 class="blue-text">去玩耍</h6>
                </div>
              <% else %>
                <div class="col-xs-3 my-nav-tab" >
                  <%= image_tag "navbar_icons/g_play.svg", :class => "nav-icon-style" %>
                  <h6 class="white-text">去玩耍</h6>
                </div>
              <% end %>           
            <% end %>
            
            <%= link_to user_path(current_user) do %>
              <% if controller?("users")%>
                <div class="col-xs-3 my-nav-tab white-bg" >
                  <%= image_tag "navbar_icons/point.svg", :class => "nav-icon-style" %>
                  <h6 class="blue-text">看積分</h6>
                </div>
              <% else %>
                <div class="col-xs-3 my-nav-tab" >
                  <%= image_tag "navbar_icons/g_point.svg", :class => "nav-icon-style" %>
                  <h6 class="white-text">看積分</h6>
                </div>
              <% end %>                
            <% end %>            
            
            <%= link_to products_path do %>
              <% if controller?("products")%>
                <div class="col-xs-3 my-nav-tab white-bg" style="border-right: none;">
                  <%= image_tag "navbar_icons/shop.svg", :class => "nav-icon-style" %>
                  <h6 class="blue-text">換商品</h6>
                </div>
              <% else %>
                <div class="col-xs-3 my-nav-tab" style="border-right: none;">
                  <%= image_tag "navbar_icons/g_shop.svg", :class => "nav-icon-style" %>
                  <h6 class="white-text">換商品</h6>
                </div>
              <% end %>
            <% end %> 
          </div>
        <% end %>
      </nav>


    <!-- Alert-->
    <% if flash[:notice] %>
      <div class="col-xs-12" style="margin-top: 40px;  position:absolute; top:50px; z-index:10; ">
        <div class="">
          <div class="alert alert-success alert-dismissible" role="alert">
            <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            <%= notice %>
          </div>
        </div>
      </div>
    <% end %>
    



    <%= yield %>
    

  </body>
</html>
