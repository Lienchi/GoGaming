<!DOCTYPE html>
<html>
  <head>
    <title>GoGaming</title>
    <%= csrf_meta_tags %>
    <%= Gon::Base.render_data %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <script defer src="https://use.fontawesome.com/releases/v5.0.8/js/solid.js" integrity="sha384-+Ga2s7YBbhOD6nie0DzrZpJes+b2K1xkpKxTFFcx59QmVPaSA8c7pycsNaFwUK6l" crossorigin="anonymous"></script>
<script defer src="https://use.fontawesome.com/releases/v5.0.8/js/fontawesome.js" integrity="sha384-7ox8Q2yzO/uWircfojVuCQOZl+ZZBg2D2J5nkpLqzH1HY0C1dHlTKIbpRz/LG23c" crossorigin="anonymous"></script>
  </head>

  <body>
    <!-- 導覽列 -->
    <nav class="navbar navbar-default nav-style">
      <div class="container-fluid">
        <!-- Brand and toggle get grouped for better mobile display -->
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <% if current_user %>
            <div class="nav-icon">
              <%= link_to root_path do %>
                <%= image_tag "icons/map icon.png", style:"width:35px;height:35px;"%>
              <% end %>
            </div>
            <div class="nav-icon">
              <%= link_to trips_path do %>
                <%= image_tag "icons/Station.png", style:"width:35px;height:35px;"%>
              <% end %>
            </div>
            <% if controller?("trips") && action?("show")%>
              <button class="btn trip-button" data-toggle="modal" data-target="#myModal"><%= @trip.name%></button>
            <%end%>
            <%= link_to user_path(current_user) do %>
              <div class="nav-icon pull-right" style="padding: 2px 10px 0 2px;"><%= current_user.points%></div>
              <div class="nav-icon pull-right">
                <%= image_tag "icons/G.png", style:"width:35px;height:35px;"%>
              </div>

            <% end %>
          <%end%>
        </div>
        <!-- Collect the nav links, forms, and other content for toggling -->
        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
          <ul class="pull-right text-right nav navbar-nav">
            <% if current_user %>
              <% if current_user.role == "admin" %>
                <li><%= link_to "後台", admin_trips_path%><li>
              <%end%>
            <li><%= link_to('登出', destroy_user_session_path, method: :delete) %></li>
            <li><%= link_to('修改密碼', edit_user_registration_path) %></li>
            <% end %>
          </ul>
        </div>
      </div>
    </nav>
    <!-- Alert-->
    <% if flash[:notice] %>
      <div class="container">
        <div class="row">
          <div class="alert alert-success alert-dismissible" role="alert">
            <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            <%= notice %>
          </div>
        </div>
      </div>
    <% end %>
    <% if flash[:alert] %>
      <div class="container">
        <div class="row">
          <div class="alert alert-danger alert-dismissible" role="alert">
            <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            <%= alert %>
          </div>
        </div>
      </div>
    <% end %> 
    <%= yield %>
  </body>
</html>
